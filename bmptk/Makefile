.phony: clean doc docs documentation build all examples

docs : doc
documentation: doc
all: doc examples
build: examples

doc: 
		Doxygen docsrc/Doxyfile
		echo "<META HTTP-EQUIV='refresh' CONTENT='0;URL=./html/index.html'>" >docs/index.html
		
examples:
		cd examples && make build
      
clean:
		cmd /c "del /s /q docs"
		cd examples && make clean	
